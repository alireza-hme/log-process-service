Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  NET = "192.168.56"
  config.vm.synced_folder ".", "/vagrant", disabled: false

  # Common provisioning script for all nodes
  COMMON_PROVISION = <<-SHELL
set -euxo pipefail

apt-get update -y
apt-get install -y apt-transport-https ca-certificates curl gpg lsb-release jq

swapoff -a
sed -i.bak '/ swap / s/^/#/' /etc/fstab

cat <<EOF >/etc/modules-load.d/k8s.conf
overlay
br_netfilter
EOF
modprobe overlay
modprobe br_netfilter

cat <<EOF >/etc/sysctl.d/k8s.conf
net.bridge.bridge-nf-call-iptables  = 1
net.bridge.bridge-nf-call-ip6tables = 1
net.ipv4.ip_forward                 = 1
EOF
sysctl --system

apt-get install -y containerd
mkdir -p /etc/containerd
containerd config default >/etc/containerd/config.toml
sed -i 's/SystemdCgroup = false/SystemdCgroup = true/' /etc/containerd/config.toml
systemctl enable --now containerd

mkdir -p /etc/apt/keyrings
curl -fsSL https://pkgs.k8s.io/core:/stable:/v1.34/deb/Release.key | gpg --dearmor -o /etc/apt/keyrings/kubernetes-apt-keyring.gpg
echo "deb [signed-by=/etc/apt/keyrings/kubernetes-apt-keyring.gpg] https://pkgs.k8s.io/core:/stable:/v1.34/deb/ /" >/etc/apt/sources.list.d/kubernetes.list

apt-get update -y
apt-get install -y kubelet kubeadm kubectl
apt-mark hold kubelet kubeadm kubectl
systemctl enable --now kubelet

mkdir -p /etc/default
SHELL

  # Control Plane
  config.vm.define "cp1" do |cp|
    cp.vm.hostname = "cp1"
    cp.vm.network "private_network", ip: "#{NET}.10"
    cp.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-cp1"
      vb.cpus = 2
      vb.memory = 4096
    end
    cp.vm.provision "shell", inline: COMMON_PROVISION
    cp.vm.provision "shell", inline: <<-SHELL
echo 'KUBELET_EXTRA_ARGS=--node-ip=#{NET}.10' | sudo tee /etc/default/kubelet
sudo systemctl daemon-reload
sudo systemctl restart kubelet
SHELL
  end

  # Worker Node 1
  config.vm.define "w1" do |w|
    w.vm.hostname = "w1"
    w.vm.network "private_network", ip: "#{NET}.11"
    w.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-w1"
      vb.cpus = 2
      vb.memory = 6144
    end
    w.vm.provision "shell", inline: COMMON_PROVISION
    w.vm.provision "shell", inline: <<-SHELL
echo 'KUBELET_EXTRA_ARGS=--node-ip=#{NET}.11' | sudo tee /etc/default/kubelet
sudo systemctl daemon-reload
sudo systemctl restart kubelet
SHELL
  end

  # Worker Node 2
  config.vm.define "w2" do |w|
    w.vm.hostname = "w2"
    w.vm.network "private_network", ip: "#{NET}.12"
    w.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-w2"
      vb.cpus = 2
      vb.memory = 6144
    end
    w.vm.provision "shell", inline: COMMON_PROVISION
    w.vm.provision "shell", inline: <<-SHELL
echo 'KUBELET_EXTRA_ARGS=--node-ip=#{NET}.12' | sudo tee /etc/default/kubelet
sudo systemctl daemon-reload
sudo systemctl restart kubelet
SHELL
  end
end